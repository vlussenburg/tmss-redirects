{% block meta %}
<!-- Primary Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="The Meaningful Shit Show" />
<meta property="og:title" content="The Meaningful Shit Show" />
<meta property="og:description" content="A podcast by Vincent exploring trauma, identity, psychology, and what it actually takes to live a meaningful life." />
<meta property="og:url" content="https://tms.show/" />
<meta property="og:image" content="https://tms.show/tmss_logo_landscape_og.jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/jpeg" />

<!-- Canonical -->
<link rel="canonical" href="https://tms.show/" />

<!-- Twitter (helps consistency; ignored by iMessage) -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="The Meaningful Shit Show" />
<meta name="twitter:description" content="Trauma, identity, psychology, and the quiet work of becoming human." />
<meta name="twitter:image" content="https://tms.show/tmss_logo_landscape_og.jpeg" />

<!-- Apple -->
<meta name="apple-mobile-web-app-title" content="TMSS" />

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "PodcastSeries",
  "@id": "{{ site.url }}/#podcast",
  "name": "{{ site.name }}",
  "description": "{{ site.description }}",
  "url": "{{ site.url }}",
  "image": "{{ site.image }}",
  "author": {
    "@type": "Organization",
    "name": "{{ site.name }}"
  },
  "sameAs": [
    "{{ site.social.apple }}",
    "{{ site.social.youtube }}",
    "{{ site.social.instagram }}",
    "{{ site.social.tiktok }}",
    "{{ site.social.substack }}",
    "{{ site.social.spotify }}",
    "https://open.spotify.com/show/5F5cCiSZ2vzQFjUVbWstyo",
    "https://castbox.fm/channel/id5394785",
    "https://www.iheart.com/podcast/116483492/",
    "https://anchor.fm/s/da5ab718/podcast/rss",
    "https://music.amazon.com/podcasts/0130f30f-e794-43c0-bbab-a582a6821305/the-meaningful-sht-show"
  ]
}
</script>
{% endblock %}

<main>
  <header class="site-header">
    <img src="{{ site.image }}" alt="{{ site.name }}" class="site-logo" />
    <div class="top-icons">
      {% for platform, url in site.social %}
        <a href="/{{ platform }}" title="{{ platform | capitalize }}">
          <span class="platform-icon platform-{{ platform }}"></span>
        </a>
      {% endfor %}
    </div>
  </header>

  <div id="episodes-container" class="episodes-grid">
    {% for episode in episodes.episodes | sort(false, false, 'episode') | reverse %}
    {% include "episode-card.njk" %}
    {% endfor %}
  </div>
</main>


